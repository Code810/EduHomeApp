@model SettingCreateVm

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Text setting create</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">File setting create</a>
    </li>
    
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <div class="container">
            <div class="row">
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Category Create form</h4>
                            <form enctype="multipart/form-data" asp-action="create" class="forms-sample" method="post">
                                <div class="form-group">
                                    <label asp-for="Key"></label>
                                    <input asp-for="Key" class="form-control" placeholder="Key">
                                    <span class="text-danger" asp-validation-for="Key"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Value"></label>
                                    <textarea asp-for="Value" class="form-control" placeholder="Value" rows="8"></textarea>
                                    <span class="text-danger" asp-validation-for="Value"></span>
                                </div>
                               
                                <button type="submit" class="btn btn-gradient-primary me-2">Create</button>
                                <a class="btn btn-light" asp-action="index">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <div class="container">
            <div class="row">
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Category Create form</h4>
                            <form enctype="multipart/form-data" asp-action="create" class="forms-sample" method="post">
                                <div class="form-group">
                                    <label asp-for="Key"></label>
                                    <input asp-for="Key" class="form-control" placeholder="Key">
                                    <span class="text-danger" asp-validation-for="Key"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Photo"> </label>
                                    <input asp-for="Photo" class="form-control" placeholder="Description">
                                    <span class="text-danger" asp-validation-for="Photo"></span>
                                </div>
                                <button type="submit" class="btn btn-gradient-primary me-2">Create</button>
                                <a class="btn btn-light" asp-action="index">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}