@model IEnumerable<CourseListVm>

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Course table</h4>
                    <a class="btn btn-outline-success" asp-action="create">Create</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Image </th>
                                <th> Name </th>
                                <th> Category</th>
                                <th> Language</th>
                                <th> Price</th>
                                <th> Teacher</th>
                                <th> Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/course/@course.ImageUrl" alt="" />
                                    </td>
                                    <td>@course.Name</td>
                                    <td>@course.Category</td>
                                    <td>@course.Language</td>
                                    <td>@course.Price</td>
                                    <td>@course.TeacherName</td>
                                    <td>
                                        <a class="text-primary pe-2 text-decoration-none" asp-action="detail" asp-route-id="@course.Id">

                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                        <a class="text-succes pe-2 text-decoration-none" asp-action="update" asp-route-id="@course.Id">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a class="text-danger text-decoration-none delete-course" course-id="@course.Id">
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
  
</div>