@model SliderListVm

<div class="container">
    <div class="row">
        <div class="col-lg-10 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <img src="~/img/slider/@Model.ImageUrl" alt="" style="width:800px; height:500px;"/>
                    <h1 class="card-title my-4">Model.Title</h1>
                    <p class="text-secondary my-4">@Model.Description</p>
                    <p class="text-secondary my-4">@Model.CreatedDate.ToString("dd.MM.yyyy")</p>
                    <a class="btn btn-dark my-4" asp-action="index">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>