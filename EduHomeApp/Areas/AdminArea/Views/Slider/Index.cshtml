@model IEnumerable<SliderListVm>

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog table</h4>
                    <a class="btn btn-outline-success" asp-action="create">Create</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Image </th>
                                <th> Title </th>
                                <th> Description</th>
                                <th> Created date</th>
                                <th> Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var slide in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/slider/@slide.ImageUrl" alt="" />
                                    </td>
                                    <td>@slide.Title</td>
                                    <td class="text-wrap">@((slide.Description.Length > 30) ? slide.Description.Substring(0, 30) : slide.Description)...</td>
                                    <td>@slide.CreatedDate.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <a class="text-primary pe-2 text-decoration-none" asp-action="detail" asp-route-id="@slide.Id">

                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                        <a class="text-succes pe-2 text-decoration-none" asp-action="update" asp-route-id="@slide.Id">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a class="text-danger text-decoration-none delete-slider" slider-id="@slide.Id">
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
