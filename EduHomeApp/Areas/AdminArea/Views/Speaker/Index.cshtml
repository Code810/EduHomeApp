@model IEnumerable<SpeakerIndexVm>

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Event table</h4>
                    <a class="btn btn-outline-success" asp-action="create">Create</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Image </th>
                                <th> FullName </th>
                                <th> Position</th>
                                <th> Events</th>
                                <th> Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var speaker in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/event/@speaker.ImageUrl" alt="" />
                                    </td>
                                    <td>@speaker.FullName</td>
                                    <td>@speaker.Position</td>
                                    <td>
                                        @foreach (var ev in speaker.Events)
                                        {
                                            <p>@ev</p>
                                        }
                                    </td>
                                    <td>
                                        <a class="text-primary pe-2 text-decoration-none" asp-action="detail" asp-route-id="@speaker.Id">

                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                        <a class="text-succes pe-2 text-decoration-none" asp-action="update" asp-route-id="@speaker.Id">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a class="text-danger text-decoration-none delete-speaker" speaker-id="@speaker.Id">
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
