@model IEnumerable<EventListVm>

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Event table</h4>
                    <a class="btn btn-outline-success" asp-action="create">Create</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Image </th>
                                <th> Title </th>
                                <th> Time</th>
                                <th> Adress</th>
                                <th> Description</th>
                                <th> Speakers</th>
                                <th> Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ev in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/event/@ev.ImageUrl" alt="" />
                                    </td>
                                    <td>@ev.Title</td>
                                    <td>@ev.Time.ToString("dd.MM.yyyy")</td>
                                    <td>@ev.Address</td>
                                    <td class="text-wrap">@((ev.Description.Length > 30) ? ev.Description.Substring(0, 30) : ev.Description)...</td>
                                    <td>
                                    @foreach (var speaker in ev.Speakers)
                                        {
                                            <p>@speaker</p>
                                        }
                                    </td>
                                    <td>
                                        <a class="text-primary pe-2 text-decoration-none" asp-action="detail" asp-route-id="@ev.Id">

                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                        <a class="text-succes pe-2 text-decoration-none" asp-action="update" asp-route-id="@ev.Id">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a class="text-danger text-decoration-none delete-event"  event-id="@ev.Id">
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>